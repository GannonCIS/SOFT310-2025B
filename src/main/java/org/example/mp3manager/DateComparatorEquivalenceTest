import static org.junit.Assert.*;
import org.junit.Test;
import edu.uga.cs1302.mp3manager.Mp3File;
import edu.uga.cs1302.mp3manager.DateComparator;

public class DateComparatorEquivalenceTest {

    private Mp3File make(int year) {
        Mp3File f = new Mp3File("test.mp3");
        f.setYear(year);
        return f;
    }

    @Test
    public void firstYearBeforeSecond() {
        Mp3File first = make(1999);
        Mp3File second = make(2000);
        DateComparator comp = new DateComparator();
        assertTrue(comp.compare(first, second) < 0);
    }

    @Test
    public void yearsAreEqual() {
        Mp3File first = make(2010);
        Mp3File second = make(2010);
        DateComparator comp = new DateComparator();
        assertEquals(0, comp.compare(first, second));
    }

    @Test
    public void firstYearAfterSecond() {
        Mp3File first = make(2020);
        Mp3File second = make(2015);
        DateComparator comp = new DateComparator();
        assertTrue(comp.compare(first, second) > 0);
    }
}
