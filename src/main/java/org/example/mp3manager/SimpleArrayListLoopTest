package edu.uga.cs1302.mp3manager;
import static org.junit.Assert.*;
import org.junit.Test;
public class SimpleArrayListLoopTest {
    @Test
    public void testAddLoopAndResize() {
        SimpleArrayList<Integer> list = new SimpleArrayList<>();
        for (int i = 0; i < 50; i++) {
            list.add(i);
        }
        assertEquals(50, list.size());
        assertEquals(Integer.valueOf(0), list.get(0));
        assertEquals(Integer.valueOf(49), list.get(49));
    }
    @Test
    public void testRemoveLoopUntilEmpty() {
        SimpleArrayList<Integer> list = new SimpleArrayList<>();
        for (int i = 0; i < 10; i++) {
            list.add(i);
        }
        for (int i = 0; i < 10; i++) {
            list.remove(0);
        }
        assertEquals(0, list.size());
    }
    @Test(expected = IndexOutOfBoundsException.class)
    public void testAccessAfterResize() {
        SimpleArrayList<Integer> list = new SimpleArrayList<>();
        for (int i = 0; i < 25; i++) {
            list.add(i);
        }
        list.get(100);
    }
}
